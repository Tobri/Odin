<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tobri.first"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tobri.first.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- DashBoard / MainActivity -->
        <activity
            android:name="com.tobri.first.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.tobri.first.ShowMessagesActivity"
            android:label="@string/title_activity_show_messages" >
        </activity>
        <activity
            android:name="com.tobri.first.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.tobri.first.SendMessage"
            android:label="@string/title_activity_send_message" >
        </activity>
    </application>

</manifest>
